<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix</title>
    <link rel="icon" href="../Assets/img/logo-1.png">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .nav-link {
            color: white !important;
            font-size: 20px;
        }

        header {
            background-color: black;
        }

        form .form-control {
            border-radius: 20px;
            padding: 0.75rem 1.25rem;
            margin-right: 10px;
        }
    </style>

</head>

<body>
    <header class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="/"><img src="../Assets/img/logo.svg" class="logo" width="150px"></a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/view">View</a></li>
                    <li class="nav-item"><a class="nav-link" href="/add">Add</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container text-center mt-4">
        <h1>Edit Your Book</h1>
        <form action="/insertData" method="post" class="form-inline col-md-12" enctype="multipart/form-data">
            <table class="table table-bordered">
                <tr>
                    <th>Image : </th>
                    <td>
                        <input type="file" name="image" id="">
                        <img src="../<%= data.image %>" alt="" width="100px">
                        <input type="hidden" name="id" value="<%= data._id %>">
                    </td>
                </tr>
                <tr>
                    <th>Title : </th>
                    <td><input type="text" name="name" value="<%= data.name %>" class="form-control"></td>
                </tr>
                <tr>
                    <th>Genre : </th>
                    <td>
                        <select name="genre" id="">
                            <option value="">---Select Genre---</option>
                            <% let genre=['Action','Thriller','Comedy','Sci-Fi','Suspense','Horror']; genre.map((val)=>
                                {
                                %>
                                <option <% if(data.genre==val){ %> selected <% } %> value="<%= val %>"><%= val %>
                                </option>
                                <% }); %>
                        </select>

                    </td>
                </tr>
                <tr>
                    <th>Date : </th>
                    <td><input type="date" name="date" value="<%= data.date %>" class="form-control"></td>
                </tr>
                <tr>
                    <th>Rating : </th>
                    <td>
                        <select name="rating" id="">
                            <option value="">---Select Genre---</option>
                            <% let rating=['⭐','⭐⭐','⭐⭐⭐','⭐⭐⭐⭐','⭐⭐⭐⭐⭐']; rating.map((val)=> {
                                %>
                                <option <% if(data.rating==val){ %> selected <% } %> value="<%= val %>"><%= val %>
                                </option>
                                <% }); %>
                        </select>

                    </td>
                </tr>
                <tr>
                    <th>Duration : </th>
                    <td><input type="text" name="time" value="<%= data.time %>" class="form-control"></td>
                </tr>
                <tr>
                    <th></th>
                    <td><input type="submit" value="Update"></td>
                </tr>
            </table>
        </form>
    </div>

</body>

</html>